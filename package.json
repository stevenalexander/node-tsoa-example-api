{
  "name": "tsoa-example-api",
  "version": "1.0.0",
  "description": "TSOA example API",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run build && node ./dist/server.js",
    "dev-start": "tsc --watch & nodemon ./dist/server.js",
    "build": "npm run clean && npm run lint && npm run swagger-gen && npm run routes-gen && tsc && npm run copy-swagger-ui",
    "lint": "tslint --project tslint.json -e ./src/**/routes.ts",
    "clean": "rimraf dist",
    "swagger-gen": "tsoa swagger",
    "routes-gen": "tsoa routes",
    "copy-swagger-ui": "ncp ./src/swagger-ui ./dist/swagger-ui",
    "test": "npm run lint && mocha tests/**/*.ts --require ts-node/register",
    "tsoa": "tsoa"
  },
  "author": "Steven Alexander",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "method-override": "^2.3.10",
    "tsoa": "^2.1.1",
    "tsoa-example-models": "git+https://github.com/stevenalexander/node-tsoa-example-models.git#v0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/method-override": "0.0.31",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.5",
    "chai": "^4.1.2",
    "mocha": "^5.0.0",
    "ncp": "^2.0.0",
    "nodemon": "^1.14.12",
    "rimraf": "^2.6.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
